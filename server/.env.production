# Production Environment Variables for Ubuntu Server
# Copy this file to .env on your Ubuntu server and update values

# Server Configuration
PORT=3001
NODE_ENV=production

# PostgreSQL Database
PGHOST=localhost
PGPORT=5432
PGUSER=ipg_user
PGPASSWORD=CHANGE_THIS_STRONG_PASSWORD
PGDATABASE=ipg_production

# Alternative: Use connection string
# DATABASE_URL=postgresql://ipg_user:password@localhost:5432/ipg_production

# CORS Origins (your production domains)
CORS_ORIGIN=https://ipg-invest.ae,https://www.ipg-invest.ae,https://dashboard.ipg-invest.ae,https://info.ipg-invest.ae,https://wallet.ipg-invest.ae,https://admin.ipg-invest.ae

# JWT Secrets (MUST CHANGE IN PRODUCTION!)
JWT_SECRET=CHANGE_THIS_TO_RANDOM_SECRET_KEY_MIN_32_CHARS
REFRESH_TOKEN_SECRET=CHANGE_THIS_TO_ANOTHER_RANDOM_SECRET_KEY_MIN_32_CHARS

# Domain
DOMAIN=ipg-invest.ae

# Email Configuration (ElasticEmail)
EMAIL_SERVICE=elasticemail
EMAIL_HOST=smtp.elasticemail.com
EMAIL_PORT=2525
EMAIL_SECURE=false
EMAIL_USER=invest.gold2025@proton.me
EMAIL_PASSWORD=YOUR_EMAIL_PASSWORD_HERE

# Telegram Bot
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE

# Redis (for sessions and caching)
REDIS_URL=redis://localhost:6379

# Optional: Redis password
# REDIS_PASSWORD=your_redis_password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/var/www/ipg/uploads

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/ipg/api.log
